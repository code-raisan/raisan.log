---
import "@/styles/fonts.css";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/constract";
import HeaderLink from "@/components/HeaderLink.astro";
---

<body class="text-neutral-600 zenkakugothic space-y-8">
  <header class="w-full p-5 space-y-4">
    <div class="flex justify-center">
      <div class="space-y-2 text-center">
        <a href="/" class="w-auto">
          <h1 class="text-4xl font-bold hover:opacity-80">{SITE_TITLE}</h1>
        </a>
        <p>{SITE_DESCRIPTION}</p>
      </div>
    </div>
    <div class="flex justify-evenly">
      <HeaderLink title="About" href="/about"/>
      <HeaderLink title="Profile" href="https://rainyan.net" external/>
      <HeaderLink title="GitHub" href="https://github.com/code-raisan" external/>
      <HeaderLink title="Twitter" href="https://twitter.com/code_raisan" external/>
    </div>
  </header>
  <main class="min-h-[100svh] container mx-auto max-w-4xl px-5">
    <slot/>
  </main>
  <footer class="w-full flex flex-col justify-center items-center p-5 space-y-4">
    <a href="/" class="underline">トップへ戻る</a>
    <small class="text-lg">&copy; 2024 Raisan.</small>
  </footer>
</body>
